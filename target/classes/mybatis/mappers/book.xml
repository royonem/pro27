<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.book">
	<resultMap id="bookResult" type="bookVO">
		<result property="num" column="num" />
		<result property="studyDate" column="studyDate" />
        <result property="studyTitle" column="title" />
        <result property="studyDetails" column="details" />
        <result property="totalChapters" column="chapters" />
	</resultMap> 
	
	<select id="selectAllBookList" resultMap="bookResult">
      <![CDATA[
         select * from book_details	 	
      ]]>
	</select>
    
     <insert id="insertBook"  parameterType="bookVO">
		<![CDATA[
			 insert into book_details(num, studyDate, title, details, chapters)
			 values(entryno_sequence.NEXTVAL, #{studyDate}, #{studyTitle}, #{studyDetails}, #{totalChapters})
		]]>      
	</insert>
	
	<select id="selectBook" resultMap="bookResult">
      <![CDATA[
         select * from book_details	where num = ${num} 	
      ]]>
	</select>
	
